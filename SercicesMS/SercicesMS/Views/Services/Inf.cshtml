
@model IEnumerable<SercicesMS.Models.Service>
@{
    ViewBag.Title = "列表查询";

}

<div class="page-header">
    <h2>信息汇总</h2>
</div>

<p>
    @Html.ActionLink("添加服务", "Create")
</p>
@using (Html.BeginForm("Inf", "Services", FormMethod.Get))
{
<p>
    服务名：@Html.TextBox("serviceName")&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

    用户名：@Html.DropDownList("userName", "All")

    <input type="submit" value="筛选" style="margin-left:5%" />
</p>
 
   
}
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.S_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.S_Path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.S_User)
            <th>
                @Html.DisplayNameFor(model => model.S_Pwd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.S_Admin)
            </th>
            <th>
                <p style="visibility:hidden">占位用</p>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
    {


        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.S_Name)
            </td>
            <td>
                <a href=" http://@item.S_Path">@item.S_Path</a>


            </td>
            <td>
                @Html.DisplayFor(modelItem => item.S_User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.S_Pwd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.S_Admin)&nbsp;
            </td>
            <td>
                @Html.ActionLink("编辑", "Edit", new { id = item.ID }) |
                @Html.ActionLink("详情", "Details", new { id = item.ID }) |
                @Html.ActionLink("删除", "Delete", new { id = item.ID })
            </td>
        </tr>
}
    </tbody>
</table>


